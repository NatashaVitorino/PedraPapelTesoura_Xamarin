<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@mipmap/tela2">
    <TextView
        android:text=""
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:layout_width="383.5dp"
        android:layout_height="35.5dp"
        android:id="@+id/textView1"
        android:layout_marginBottom="0.0dp" />
    <GridLayout
        android:layout_width="wrap_content"
        android:layout_height="45dp"
        android:rowCount="2"
        android:columnCount="2"
        android:orientation="horizontal"
        android:minWidth="25px"
        android:minHeight="25px">
        <TextView
            android:id="@+id/txtPlacarJogador"
            android:layout_width="match_parent"
            android:layout_height="70dp"
            android:text="0"
            android:textSize="40dp"
            android:textStyle="bold"
            android:textColor="@android:color/white"
            android:layout_row="0"
            android:layout_column="0"
            android:layout_marginLeft="50dp"
            android:layout_marginStart="50dp"/>
        <TextView
            android:id="@+id/txtPlacarApp"
            android:layout_width="match_parent"
            android:layout_height="70dp"
            android:text="0"
            android:textSize="40dp"
            android:textStyle="bold"
            android:textColor="@android:color/white"
            android:layout_row="0"
            android:layout_column="1"
            android:layout_marginLeft="220dp"/>
    </GridLayout>
    <LinearLayout
        android:orientation="horizontal"
        android:minWidth="25px"
        android:minHeight="25px"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/linearLayout1">
        <ImageButton
            android:id="@+id/btnCliqueJogador"
            android:layout_width="120dp"
            android:layout_height="150dp"
            android:layout_weight="1"
            android:scaleType="fitStart"
            android:clickable="true"
            android:onClick="btnPedra"
            android:src="@drawable/app"
            android:backgroundTint="#00fff3e0"/>        
        <ImageButton
            android:id="@+id/btnVS"
            android:layout_width="120dp"
            android:layout_height="150dp"
            android:layout_weight="1"
            android:scaleType="fitCenter"
            android:clickable="true"
            android:onClick="btnPapel"
            android:backgroundTint="#00fff3e0"
            android:src="@drawable/vs"/>
        <ImageButton
            android:id="@+id/btnAPP"
            android:layout_width="120dp"
            android:layout_height="150dp"
            android:layout_weight="1"
            android:scaleType="fitEnd"
            android:clickable="true"
            android:onClick="btnTesoura"
            android:backgroundTint="#00fff3e0"
            android:src="@drawable/app"/>
    </LinearLayout>
    <LinearLayout
        android:orientation="horizontal"
        android:minWidth="25px"
        android:minHeight="25px"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/linearLayout2" />
    <TextView
        android:id="@+id/txtMensagem"
        android:layout_width="match_parent"
        android:layout_height="160.0dp"
        android:gravity="center"
        android:textStyle="bold"
        android:text="RESULTADOS"
        android:textColor="@android:color/white"
        android:textSize="40dp"
        android:autoText="false"
        android:background="#b201579b"
        android:layout_marginBottom="0.0dp" />
   <LinearLayout
        android:orientation="horizontal"
        android:minWidth="25px"
        android:minHeight="25px"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/linearLayout3">
        <ImageButton
            android:id="@+id/btnPedra"
            android:layout_width="120dp"
            android:layout_height="150dp"
            android:layout_weight="1"
            android:scaleType="fitStart"
            android:clickable="true"
            android:onClick="btnPedra"
            android:src="@drawable/pedra"           
            android:backgroundTint="#00fff3e0"/>
        <ImageButton
            android:id="@+id/btnPapel"
            android:layout_width="120dp"
            android:layout_height="150dp"
            android:layout_weight="1"
            android:scaleType="fitCenter"
            android:clickable="true"
            android:onClick="btnPapel"
            android:backgroundTint="#00fff3e0"
            android:src="@drawable/kami"/>
        <ImageButton
            android:id="@+id/btnTesoura"
            android:layout_width="120dp"
            android:layout_height="150dp"
            android:layout_weight="1"
            android:scaleType="fitEnd"
            android:clickable="true"
            android:onClick="btnTesoura"
            android:backgroundTint="#00fff3e0"
            android:src="@drawable/hasami"/>
        </LinearLayout>    
</LinearLayout>

   


